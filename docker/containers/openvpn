########################### VOLUMES
volumes:
  openvpn_data:
    name: openvpn_data

########################### SERVICES
services:
  openvpn-as:
    container_name: openvpn-as
    image: openvpn/openvpn-as
    restart: always
    devices:
      - /dev/net/tun:/dev/net/tun
    cap_add:
      - NET_ADMIN
      - MKNOD
    ports:
      - 943:943 # Admin GUI
      - 443:443 # TCP
      - 1194:1194/udp # UDP
    volumes:
      - openvpn_data:/openvpn
